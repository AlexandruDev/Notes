<resources>

    <!-- Default Theme -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <!-- Theme/Dark for Activities with custom Toolbar -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Navigation Drawer -->
    <style name="Drawer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">start</item>
        <item name="headerLayout">@layout/nav_header</item>
        <item name="menu">@menu/menu_drawer</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <!-- Content Includer located behind Navigation Drawer -->
    <style name="Content">
        <item name="android:layout_marginTop">?attr/actionBarSize</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- Informer for when a List is empty -->
    <style name="EmptyInformer">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:visibility">gone</item>
    </style>

    <!-- AppBarLayout -->
    <style name="AppBarLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:theme">@style/AppTheme.AppBarOverlay</item>
    </style>

    <!-- ToolBar -->
    <style name="ToolBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimaryDark</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="popupTheme">@style/AppTheme.PopupOverlay</item>
    </style>

    <!-- RecyclerView -->
    <style name="RecyclerView">
        <item name="android:scrollbars">vertical</item>
    </style>

    <!-- Attributes for dark Theme -->
    <attr name="Selector" format="reference" />

</resources>
