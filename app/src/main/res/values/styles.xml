<resources>

    <!-- Default Theme -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Theme/Dark for Activities with custom Toolbar -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Navigation Drawer -->
    <style name="Drawer">
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <!-- Content Includer located behind Navigation Drawer -->
    <style name="Content">
        <item name="android:layout_marginTop">?attr/actionBarSize</item>
    </style>

    <!-- Informer for when a List is empty -->
    <style name="EmptyInformer">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:visibility">gone</item>
    </style>

    <!-- RecyclerView -->
    <style name="RecyclerView">
        <item name="android:scrollbars">vertical</item>
    </style>

    <!-- Attributes for dark Theme -->
    <attr name="Selector" format="reference"/>

</resources>
