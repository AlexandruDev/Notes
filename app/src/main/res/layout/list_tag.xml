<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_tag_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_listitem"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/list_tag_title_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/list_tag_delete_imageview"
        android:maxLines="3"
        android:padding="16dp"
        android:textAppearance="?android:textAppearanceMedium"
        android:textStyle="bold"
        tools:text="@string/tools_tag" />

    <ImageView
        android:id="@+id/list_tag_delete_imageview"
        android:layout_width="@dimen/ic_size"
        android:layout_height="@dimen/ic_size"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:padding="12dp"
        android:src="@drawable/ic_clear_list" />

</RelativeLayout>