<androidx.preference.PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/general">

        <!-- Dark Theme -->
        <SwitchPreference
            app:icon="@drawable/ic_dark_theme"
            app:key="@string/dark_theme_key"
            app:title="@string/dark_theme_title" />

        <!-- Force 24h -->
        <SwitchPreference
            app:icon="@drawable/ic_time"
            app:key="@string/time_24_key"
            app:summary="@string/time_24_summary"
            app:title="@string/time_24_title" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/notifications">

        <SwitchPreference
            app:icon="@drawable/ic_vibration"
            app:key="@string/notifications_vibrate_key"
            app:summary="@string/disabled"
            app:title="@string/notifications_vibrate_title" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/about">

        <Preference
            app:icon="@drawable/ic_android"
            app:key="@string/about_apps_key"
            app:summary="@string/about_apps_summary"
            app:title="@string/about_apps_title" />

        <Preference
            app:icon="@drawable/ic_info"
            app:key="@string/about_simplenotes_key"
            app:summary="@string/version"
            app:title="@string/app_name" />

    </PreferenceCategory>

</androidx.preference.PreferenceScreen>
